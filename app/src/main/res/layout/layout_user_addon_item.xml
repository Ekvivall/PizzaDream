<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginVertical="20dp"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/user_addon_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="6"
    android:text="@string/app_name"
    android:textColor="@color/black"
    android:fontFamily="@font/montserrat"
    android:textSize="15sp"/>
    <ImageView
        android:id="@+id/user_addon_decrease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_remove_24"
        android:background="@drawable/ripple_mode_grey" />

    <TextView
        android:id="@+id/user_addon_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="1"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/user_addon_increase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_add_24"
        android:background="@drawable/ripple_mode_grey"/>
    <TextView
        android:id="@+id/user_addon_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:text="28 грн."
        android:textColor="@color/black"
        android:textSize="15sp" />
    <ImageView
        android:id="@+id/user_addon_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_close_24"
        android:background="@drawable/ripple_mode_grey" />
</LinearLayout>